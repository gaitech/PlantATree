<?xml version='1.0' encoding='utf-8'?>
<widget id="io.plantatree.gaitech" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <platform name="android">
        <splash src="www/img/screen.png" />
        <preference name="SplashScreenBackgroundColor" value="white" />
    </platform>
    <name>Plant A tree</name>
    <description>
        A simple app which allow to user to plant a tre anywhere 
    </description>
    <author email="anuj.k@gai.co.in" href="http://gai.co.in/">
        gai Technologies app development team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="www/img/logo.png" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="android" spec="^6.3.0" />
    <plugin name="cordova-plugin-x-toast" spec="^2.6.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-camera" spec="^4.0.2" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
</widget>
